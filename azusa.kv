#:kivy 2.0

<ProgramWindow>

    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height

        padding: 20
        spacing: 20

        Image:
            source: 'azusa.jpg'
            size_hint: (4,4)
            pos_hint: {'center_x':0.5}

        Label:
            id: program_name
            text: 'Azusa - Manga Downloader'
            font_size: 30
            pos_hint: {'center_x':0.5}

        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: url_label
                text: 'URL'
                size_hint_x: 0.25

            TextInput:
                id: url
                text: ''
                size_hint_y: 1.4
                readonly: False
                multiline: False

        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: directory_label
                text: 'Save Directory'
                size_hint_x: 0.25

            TextInput:
                id: directory
                text: ''
                size_hint_y: 1.4
                readonly: False
                multiline: False


        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: cpu_label
                text: 'Parellel processes count'
                size_hint: (0.004,1.3)

            TextInput:
                id: cpu_count
                text: ''
                size_hint: (0.00075,1.3)
                #pos_hint: {'x':0.1}
                readonly: False
                multiline: False

            Label:
                id: dummy
                text: ''
                size_hint: (0.015,1.2)


        Button:
            id: batch_download
            text: 'Batch Download!'
            pos_hint: {'center_x':0.5}
            size_hint: (0.15, 0.3)
            on_press: root.start_download()
            disabled: False


        ProgressBar:
            id: download_progress
            value: 0
            min: 0
            max: 137
            size_hint_x: 0.8
            pos_hint: {'center_x':0.5}

        Label:
            id: download_status
            text: 'Download not started yet!'
            pos_hint: {'center_x':0.5}

        Image:
            id: gif
            source: 'animation.gif'
            opacity: 0
            size_hint: (1,1)
            pos_hint: {'center_x':0.5}

        Label:
            id: version_code
            text: 'Developer : sndev28\nVer 3.42.16'
            font_size: 12
            pos_hint: {'x':0.40, 'center_y':0.5}
            size_hint: (1, 0.25)



            

