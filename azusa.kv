#:kivy 2.0

<ProgramWindow> 

    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height

        padding: 20
        spacing: 10

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'resources\\background2.jpg'

        Label:
            id: program_name
            text: 'Azusa - Manga Downloader'
            font_size: 26
            # color: 'black'
            pos_hint: {'center_x':0.5}
            size_hint_y: .4

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 2.5
            # canvas.before:
            #     Color:
            #         rgba: (1,0,0,1)
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: .8
                

                BoxLayout:
                    orientation:'horizontal'

                    padding: 10
                    spacing: 10
                    # canvas.before:
                    #     Color:
                    #         rgba: (1,0,0,1)
                    #     Rectangle:
                    #         pos: self.pos
                    #         size: self.size

                    Label:
                        id: url_label
                        text: '[b]URL[/b]'
                        # color: 'black'
                        size_hint_x: 0.25
                        markup: True

                    TextInput:
                        id: url
                        text: 'https://manganelo.com/manga/kishuku_gakkou_no_juliet'
                        background_normal: 'resources\\text_url_normal.jpg'
                        background_active: 'resources\\text_url_focused.jpg'
                        background_disabled_normal: 'resources\\text_url_normal.jpg'
                        size_hint_y: .4
                        pos_hint: {'center_y':.5}
                        readonly: False
                        multiline: False
                        

                BoxLayout:
                    orientation:'horizontal'

                    padding: 10
                    spacing: 10

                    Label:
                        id: directory_label
                        text: '[b]Save Directory[/b]'
                        # color: 'black'
                        size_hint_x: 0.25
                        markup: True

                    TextInput:
                        id: directory
                        text: 'C:\\Users\\niyas\\Desktop\\Dev\\TestingGrounds\\BWaaaaaah'
                        background_normal: 'resources\\text_save_normal.jpg'
                        background_active: 'resources\\text_save_focused.jpg'
                        background_disabled_normal: 'resources\\text_save_normal.jpg'
                        size_hint_y: .4
                        pos_hint: {'center_y':.5}
                        readonly: False
                        multiline: False

                BoxLayout:
                    orientation:'horizontal'

                    padding: 10
                    spacing: 10

                    size_hint_y: .35

                    Button:
                        id: populator
                        text: 'Populate chapter list'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        # color: 'black'
                        markup: True
                        on_press: root.populate()

                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            # Rectangle:
                            #     pos: self.pos
                            #     size: self.size
                            Line:
                                width: 1.1
                                rectangle: self.x, (self.y - 4), self.width, (self.height + 8)

                    Button:
                        id: selectiontoggler
                        text: 'Select/Deselect all'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        # color: 'black'
                        markup: True
                        opacity: 0
                        on_press: root.selecttoggle()
                        disabled: True

                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            # Rectangle:
                            #     pos: self.pos
                            #     size: self.size
                            Line:
                                width: 1.1
                                rectangle: self.x, (self.y - 4), self.width, (self.height + 8)


            
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.7,1)
                spacing: 10

                Label:
                    text: '[b]Chapter List[/b]'
                    # color: 'black'
                    size_hint_y: None
                    height: 20
                    markup: True

                ScrollView:
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'resources\\chapter_menu.png'
                    GridLayout:

                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: chapter_list_scroll
                        cols: 2
                        # orientation: 'vertical'
                        size_hint_y: None
                        size_hint_x: 1
                        height: self.minimum_height
                        spacing: 30
                        padding: 5


    	BoxLayout:
            orientation: 'vertical'
            # canvas.before:
            #     Color:
            #         rgba: (1,1,1,1)
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
                    

            BoxLayout:
                orientation:'horizontal'

                padding: 0
                spacing: 5

                # canvas.before:
                #     Color:
                #         rgba: (1,0,0,1)
                #     Rectangle:
                #         pos: self.pos
                #         size: self.size

                size_hint_y: .5

                Label:
                    id: cpu_label
                    text: '[b]Parellel processes count[/b]'
                    # color: 'black'
                    size_hint_x: .25
                    # size_hint_y: .3
                    pos_hint: {'center_y': .5}
                    markup: True

                # TextInput:
                #     id: cpu_count
                #     text: '3'
                #     size_hint: (0.00075,1.3)
                #     #pos_hint: {'x':0.1}
                #     readonly: False
                #     multiline: False

                Slider:
                    id: cpu_count_slider
                    min: 1
                    max: 10
                    step: 1
                    size_hint_x: .7
                    # size_hint_y: .3
                    pos_hint: {'center_y': .5}
                    
                    on_value: root.cpu_counter(*args)

                TextInput:
                    id: cpu_count
                    text: '1'
                    size_hint_x: .05
                    size_hint_y: .5
                    pos_hint: {'center_y': .5}
                    readonly: True

            BoxLayout:
                orientation: 'horizontal'

                padding: 10
                spacing: 10
                size_hint_y: .5

                Label:
                    id: serialize
                    text: '[b]Serialize chapter names[/b]'
                    # color: 'black'
                    size_hint: (0.5,1)
                    markup: True
                
                Switch:
                    id: serialize_check
                    on_active: root.serialize(self, self.active)
                    disabled: False
                    size_hint_x: 0.25
                    

                Label:
                    id: dummy
                    text: ''
                    size_hint: (1.8,1)

        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2

            # padding: 5
            # spacing: 10


            Button:
                id: batch_download
                text: '[b]Download![/b]'
                pos_hint: {'center_x':0.5}
                size_hint: (.25, 1)
                on_press: root.start_download()
                disabled: False
                background_normal: ''
                background_color: (0,0,0,0)
                # color: 'black'
                markup: True

                canvas.before:
                    Color:
                        rgba: (1,1,1,1)
                    # Rectangle:
                    #     pos: self.pos
                    #     size: self.size
                    Line:
                        width: 1.1
                        rectangle: self.x + (self.width/3), self.y, (self.width/3), self.height

            Button:
                id: cancel_download
                text: '[b]Cancel![/b]'
                pos_hint: {'center_x':0.5}
                size_hint: (.25, 1)
                on_press: root.cancel_download()
                disabled: False
                background_normal: ''
                background_color: (0,0,0,0)
                # color: 'black'
                opacity: 0
                markup: True
                disabled: True

                canvas.before:
                    Color:
                        rgba: (1,1,1,1)
                    # Rectangle:
                    #     pos: self.pos
                    #     size: self.size
                    Line:
                        width: 1.1
                        rectangle: self.x + (self.width/3), self.y, (self.width/3), self.height


        BoxLayout:
            orientation: 'vertical'

            ProgressBar:
                id: download_progress
                value: 0
                min: 0
                max: 137
                size_hint: (.8, .5)
                pos_hint: {'center_x':0.5}

            Label:
                id: download_status
                text: '[b]Download not started yet![/b]'
                # color: 'black'
                pos_hint: {'center_x':0.5}
                bold: True
                markup: True

            Image:
                id: gif
                source: 'resources\\animation.gif'
                opacity: 0
                size_hint: (1,.5)
                pos_hint: {'center_x':0.5}

        GridLayout:
            cols:3
            size_hint_y: 0.1

            Label:
                id: dummy
                text: ''
                size_hint: (0.95, 1)

            Label:
                id: version_code
                text: 'Developer : sndev28\nVer 4.10.27'
                # color: 'black'
                font_size: 12
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                size_hint: (0.2, 0.25)

            Button:
                id: update
                text: 'Update'
                font_size: 10
                pos_hint: {'center_x':0.95}
                size_hint: (0.09, 0.1)
                on_press: root.updater_button()
                disabled: False
                background_normal: ''
                background_color: (0,0,0,0)
                # color: 'black'
                markup: True

                canvas.before:
                    Color:
                        rgba: (1,1,1,1)
                    # Rectangle:
                    #     pos: self.pos
                    #     size: self.size
                    Line:
                        width: 1.1
                        rectangle: self.x, self.y - 2, self.width, self.height + 4



            

