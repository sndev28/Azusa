#:kivy 2.0

<ProgramWindow>:

    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height

        padding: 20
        spacing: 20

        Image:
            source: 'resources\\azusa.jpg'
            size_hint: (4,4)
            pos_hint: {'center_x':0.5}

        Label:
            id: program_name
            text: 'Azusa - Manga Downloader'
            font_size: 30
            pos_hint: {'center_x':0.5}

        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: url_label
                text: 'URL'
                size_hint_x: 0.25

            TextInput:
                id: url
                text: 'https://manganelo.com/manga/kishuku_gakkou_no_juliet'
                size_hint_y: 1.4
                readonly: False
                multiline: False

        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: directory_label
                text: 'Save Directory'
                size_hint_x: 0.25

            TextInput:
                id: directory
                text: 'C:\\Users\\niyas\\Desktop\\Dev\\TestingGrounds\\BWaaaaaah'
                size_hint_y: 1.4
                readonly: False
                multiline: False


        BoxLayout:
            orientation:'horizontal'

            padding: 10
            spacing: 10

            Label:
                id: cpu_label
                text: 'Parellel processes count'
                size_hint: (0.25,1.3)

            # TextInput:
            #     id: cpu_count
            #     text: '3'
            #     size_hint: (0.00075,1.3)
            #     #pos_hint: {'x':0.1}
            #     readonly: False
            #     multiline: False

            Slider:
                id: cpu_count_slider
                min: 1
                max: 10
                step: 1
                
                on_value: root.cpu_counter(*args)

            TextInput:
                id: cpu_count
                text: '1'
                size_hint: (0.05,1.3)
                readonly: True

        GridLayout:
            cols: 3

            padding: 10
            spacing: 10

            Label:
                id: serialize
                text: 'Serialize chapter names'
                size_hint: (0.5,1.3)
            
            Switch:
                id: serialize_check
                on_active: root.serialize(self, self.active)
                disabled: False
                size_hint_x: 0.25

            Label:
                id: dummy
                text: ''
                size_hint: (1.8,1.2)

        
        GridLayout:
            cols:2
            size_hint_y: 0.3


            Button:
                id: batch_download
                text: 'Batch Download!'
                pos_hint: {'center_x':0.5}
                size_hint: (0.04, 0.3)
                on_press: root.start_download()
                disabled: False

            Button:
                id: cancel_download
                text: 'Cancel!'
                pos_hint: {'center_x':0.5}
                size_hint: (0.04, 0.3)
                on_press: root.cancel_download()
                disabled: False


        ProgressBar:
            id: download_progress
            value: 0
            min: 0
            max: 137
            size_hint_x: 0.8
            pos_hint: {'center_x':0.5}

        Label:
            id: download_status
            text: 'Download not started yet!'
            pos_hint: {'center_x':0.5}

        Image:
            id: gif
            source: 'resources\\animation.gif'
            opacity: 0
            size_hint: (1,1)
            pos_hint: {'center_x':0.5}

        GridLayout:
            cols:3
            size_hint_y: 0.1

            Label:
                id: dummy
                text: ''
                size_hint: (0.95, 1.2)

            Label:
                id: version_code
                text: 'Developer : sndev28\nVer 3.87.54'
                font_size: 12
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                size_hint: (0.2, 0.25)

            Button:
                id: update
                text: 'Update'
                font_size: 10
                pos_hint: {'center_x':0.95}
                size_hint: (0.09, 0.1)
                on_press: root.updater_button()
                disabled: False



            

